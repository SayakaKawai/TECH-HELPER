<div class="contents clearfix">
  <% @question.each do |question| %>
    <div class="content_post" style="background-image: url(<%= question.image %>);">
      <p>■ 質問タイトル ■<%= simple_format(question.title) %></p>
      <p>■ 質問内容 ■<%= simple_format(question.text) %></p>
      <span class="name"><%= question.user_id %></span>
    </div>
    <br />
  <% end %>
</div>

